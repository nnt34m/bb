---

  const { className } = Astro.props

---

<button class={className} >
  <slot></slot>
  <svg><use xlink:href="#sprite-underline"></use></svg>
</button>


<style lang="scss">

  button {
    color: var(--color-3);
  }


  svg {
    width: 100%;
    height: 3.25rem;
    stroke: var(--color-2);
    stroke-dasharray: 2178.047607421875;
    stroke-dashoffset: 2178.047607421875;
    pointer-events: none;
  }


  button:hover svg {
    animation: draw 0.3s forwards;
  }

</style>