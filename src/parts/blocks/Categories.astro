---
  import StrokedLink from 'elements:StrokedLink.astro'

  const { lang } = Astro.props

  const data = {
    technologies: {
      ru: 'Технологии',
      by: 'Технологии',
      en: 'Technologies',
    },
    money: {
      ru: 'Деньги',
      by: 'Деньги',
      en: 'Money',
    },
    achievements: {
      ru: 'Достижения',
      by: 'Достижения',
      en: 'Achievements',
    },
  }

---

<div class="categories">
  <StrokedLink href={`/${lang}/technologies`} name={data.technologies[lang]} className="category-link"/>
  <StrokedLink href={`/${lang}/money`} name={data.money[lang]} className="category-link"/>
  <StrokedLink href={`/${lang}/achievements`} name={data.achievements[lang]} className="category-link"/>
</div>


<style lang="scss">

  @use '../../styles/utils/zindex' as *;
  @use '../../styles/utils/easings' as *;

  .categories {
    position: fixed;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;

    pointer-events: none;
    z-index: z('categories');
    overflow: hidden;

    @media (max-width: 768px) {
      gap: 3rem;
    }

  }


  :global(.categories-in) .categories {
    pointer-events: auto;
  }


  .category-link {
    font-size: 15rem;
    text-transform: uppercase;
    color: var(--color-2);

    opacity: 0;
    transform: translateY(0) scale(1.1);
    transition: opacity 0.5s, transform 0.5s;
    will-change: transform;

    @media (max-aspect-ratio: 14/9) {
      font-size: 13rem;
    }

    @media (max-width: 1024px) and (orientation: landscape) {
      font-size: 11rem;
    }


    @media (max-width: 1024px) and (orientation: portrait) {
      font-size: 8rem;
    }


  }


  .category-link:nth-child(1) {
    transition-delay: 0.4s;
  }

  .category-link:nth-child(2) {
    transition-delay: 0.2s;
  }

  .category-link:nth-child(3) {
    transition-delay: 0s;
  }


  :global(.categories-in) .category-link {
    transition-duration: 2s, 0.6s;
    opacity: 1;
    transform: translateY(0) scale(1);
  }

  :global(.categories-in) .category-link:nth-child(1) {
    transition-delay: 0.8s;
  }

  :global(.categories-in) .category-link:nth-child(2) {
    transition-delay: 1s;
  }

  :global(.categories-in) .category-link:nth-child(3) {
    transition-delay: 1.2s;
  }

  :global(.categories-out) .category-link {
    transition: opacity 0.4s, transform 0.4s !important;
    opacity: 0;
    transform: translateY(0) scale(0.8);
  }

  .category-link.choosen {
    transition: opacity 1s $easeInExpo, transform 1s $easeInOutQuint !important;
    opacity: 0;
    transform: translateY(var(--dy)) scale(1.05);
  }

</style>