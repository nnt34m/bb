---

  import StrokedLink from 'elements:StrokedLink.astro'

---


<div class="language">

  <div class="nav">
    <StrokedLink href="/by" name="Беларускi" className="language-link" underline/>
    <StrokedLink href="/ru" name="Русский" className="language-link" underline/>
    <StrokedLink href="/en" name="English" className="language-link" underline/>
  </div>

</div>


<style lang="scss">

  @use '../../styles/utils/zindex' as *;
  @use '../../styles/utils/delay' as *;

  .language {
    position: fixed;
    left: 0;
    top: 0;
    z-index: z('language');

    width: 100%;
    height: var(--height, 100%);

    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
  }


  .nav {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 3rem;

    opacity: 0;
  }


  :global(.language-in) .nav {
    transition: opacity 2s 0.5s;
    opacity: 1;
  }


  :global(.language-out) .nav {
    transition: opacity 0.5s;
    opacity: 0;
  }


  :global(.language-link-span) {
    font-size: 9.6rem;
    line-height: 13.9rem;
    letter-spacing: 0.03em;

    position: relative;
  }

  :global(.language-link) {
    text-align: center;
  }

</style>